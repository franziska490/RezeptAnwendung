<Window x:Class="RezeptAnwendung.RecipeDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rezeptdetails" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <Label x:Name="TitleLabel" FontWeight="Bold" FontSize="16"/>
        </StackPanel>

        <TextBox x:Name="IngredientsTextBox" Grid.Row="1" Margin="10,10,400,10" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>

        <TextBlock Grid.Row="2" Margin="10">
            <Hyperlink x:Name="RecipeUrlHyperlink" RequestNavigate="RecipeUrlHyperlink_RequestNavigate"/>
        </TextBlock>

        <TextBox x:Name="PreparationTextBox" Grid.Row="3" Margin="10" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>

        <Image x:Name="RecipeImage" Grid.Row="1" Margin="444,78,53,60"/>
    </Grid>
</Window>
