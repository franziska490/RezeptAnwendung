<Window x:Class="RezeptAnwendung.RecipeDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rezeptdetails" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="146.693"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <!-- Fügen Sie diese Zeile für die Anweisungen hinzu -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10,10,10,10">
            <Label x:Name="TitleLabel" FontWeight="Bold" FontSize="16"/>
        </StackPanel>

        <TextBox x:Name="IngredientsTextBox" Margin="20,20,503,10" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" Grid.RowSpan="3" Grid.Row="1"/>

        <TextBlock Grid.Row="2" Margin="10,10,10,10">
            <Hyperlink x:Name="RecipeUrlHyperlink" RequestNavigate="RecipeUrlHyperlink_RequestNavigate"/>
        </TextBlock>

        <Image x:Name="RecipeImage" Grid.Row="1" Margin="300,30,269,5"/>

    </Grid>
</Window>
