<Window x:Class="RezeptAnwendung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RezeptAnwendung" Height="450" Width="600">
    <Grid Background="#FF557655">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,239,10">
            <TextBox x:Name="SearchTextBox" Width="300" Margin="0,0,10,0" Background="#FFD2D0D0" Height="24" />
            <Button x:Name="SearchButton" Content="Search" Click="SearchButton_Click" Width="40" FontSize="10" Background="#FFD2D0D0" BorderBrush="#FF8F8181"/>
        </StackPanel>

        <ListBox x:Name="RecipeListBox" Grid.Row="1" Margin="223,10,10,10" SelectionChanged="RecipeListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="Menue" Content=":=" HorizontalAlignment="Left" Height="24" Margin="557,0,0,0" VerticalAlignment="Center" Width="26" RenderTransformOrigin="1.51,-0.548" Background="#FFD2D0D0" FontFamily="Cooper Black"/>
        <ComboBox x:Name="Filter" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="56">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="#FFD2D0D0" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>


    </Grid>
</Window>
