<Window x:Class="RezeptAnwendung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RezeptAnwendung" Height="450" Width="600">
    <Grid Background="#FF557655">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="10,10,10,10">
            <TextBox x:Name="SearchTextBox" Width="300" Margin="0,0,10,0" Background="#FFD2D0D0" Height="24" />
            <Button x:Name="SearchButton" Content="Search" Click="SearchButton_Click" Width="60" FontSize="10" Background="#FFD2D0D0" BorderBrush="#FF8F8181"/>
        </StackPanel>

        <ComboBox x:Name="MealTypeComboBox" SelectedIndex="0" RenderTransformOrigin="0.57,2.93" Margin="0,49,0,303" Grid.Row="1" HorizontalAlignment="Left" Width="79">
            <ComboBoxItem Content="Frühstück"/>
            <ComboBoxItem Content="Mittagessen"/>
            <ComboBoxItem Content="Abendessen"/>
        </ComboBox>

        <ListBox x:Name="RecipeListBox" Grid.Row="1" Grid.Column="1" Margin="10,10,10,10" SelectionChanged="RecipeListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Label}" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="{Binding Ingredients}" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Url}" TextWrapping="Wrap"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button x:Name="Menue" Content=":=" HorizontalAlignment="Right" Height="24" Width="26" VerticalAlignment="Center" Background="#FFD2D0D0" FontFamily="Cooper Black" Margin="0,0,10,0" Grid.Row="0" Grid.Column="1"/>
    </Grid>
</Window>
