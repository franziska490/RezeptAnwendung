<Window x:Class="RezeptAnwendung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RezeptAnwendung" Height="450" Width="600">
    <Grid Background="#FF557655">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,239,10">
            <TextBox x:Name="SearchTextBox" Width="300" Margin="0,0,10,0" Background="#FFD2D0D0" Height="24" />
            <Button x:Name="SearchButton" Content="Search" Click="SearchButton_Click" Width="40" FontSize="10" Background="#FFD2D0D0" BorderBrush="#FF8F8181"/>
        </StackPanel>

        <ListBox x:Name="RecipeListBox" Grid.Row="1" Margin="116,10,116,10" SelectionChanged="RecipeListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Label}" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="{Binding Ingredients}" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Url}" TextWrapping="Wrap"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Planer -->
        <Button x:Name="Menue" Content="" HorizontalAlignment="Left" Height="24" Margin="557,0,0,0" VerticalAlignment="Center" Width="26" RenderTransformOrigin="1.51,-0.548" Background="#FFD2D0D0" FontFamily="Cooper Black" Click="Menue_Click"/>
        <TextBlock HorizontalAlignment="Left" Height="24" Margin="561,0,0,0" TextWrapping="Wrap" Text=": =" VerticalAlignment="Center" Width="22" RenderTransformOrigin="1.775,0.283" FontSize="14"/>
        <!-- -->

        <ComboBox x:Name="MealTypeComboBox" SelectedIndex="0" Margin="10,24,503,322" Grid.Row="1">
            <ComboBoxItem Content="Frühstück"/>
            <ComboBoxItem Content="Mittagessen"/>
            <ComboBoxItem Content="Abendessen"/>
        </ComboBox>

    </Grid>
</Window>