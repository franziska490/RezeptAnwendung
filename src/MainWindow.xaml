<Window x:Class="RezeptAnwendung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RezeptAnwendung" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="SearchTextBox" Width="300" Margin="0,0,10,0" />
            <Button Content="Suchen" Click="SearchButton_Click"/>
        </StackPanel>

        <ListBox x:Name="RecipeListBox" Grid.Row="1" Margin="10" SelectionChanged="RecipeListBox_SelectionChanged">
        </ListBox>
    </Grid>
</Window>
